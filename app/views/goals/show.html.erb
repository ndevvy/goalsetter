<h1><%= @goal.title %></h1>
<%= @goal.user.username %>'s goal<br>
<h2>Goal:</h2>
<p><%= @goal.text %>
</p>

<% if @goal.user == current_user %>
  <%= link_to "Edit Goal", edit_goal_url(@goal) %>
  <% if !@goal.completed %>
    <%= button_to "Goal Completed!", complete_goal_url(@goal) %>
  <% end %>
  <%= button_to "Delete Goal", goal_url(@goal), method: :delete %>
<% end %>
